{
  "name": "cornerstone-contracts",
  "private": true,
  "version": "0.1.0",
  "description": "Cornerstone smart contracts (Hardhat setup)",
  "license": "MIT",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "postinstall": "git rev-parse --is-inside-work-tree >/dev/null 2>&1 && git config core.hooksPath contracts/.husky || true",
    "lint:sol": "solhint 'src/**/*.sol'",
    "format": "prettier --write 'src/**/*.sol'",
    "format:check": "prettier --check 'src/**/*.sol'",
    "lint": "npm run lint:sol && npm run format:check",
    "node": "hardhat node",
    "deploy:local": "hardhat run script/deploy_local.js --network localhost",
    "deploy:local:1337": "npm run deploy:local",
    "deploy:sepolia": "hardhat run script/deploy_sepolia.js --network sepolia",
    "explorer:up": "docker compose -f blockscout/docker-compose.yml up -d",
    "explorer:down": "docker compose -f blockscout/docker-compose.yml down -v",
    "explorer:logs": "docker compose -f blockscout/docker-compose.yml logs -f blockscout",
    "explorer:open": "sh -c 'open http://localhost:8080 || xdg-open http://localhost:8080 || echo \"Explorer: http://localhost:8080\"'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@openzeppelin/contracts": "^5.0.2",
    "hardhat": "^2.22.9",
    "solidity-coverage": "^0.8.12",
    "dotenv": "^16.4.5",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^5.0.3"
  }
}
